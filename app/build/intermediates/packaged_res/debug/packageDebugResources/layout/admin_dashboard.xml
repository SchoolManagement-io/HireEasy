<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/admin_dashboard_background"
    android:weightSum="1">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/adminTopbar"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="20dp"
        android:paddingBottom="8dp"
        android:paddingHorizontal="15dp"
        android:elevation="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ADMIN PANEL"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextInverse"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <!-- Registration Section -->
        <LinearLayout
            android:id="@+id/registrationSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            android:layout_marginHorizontal="10dp"
            android:visibility="visible"
            android:padding="15dp">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome Admin!"
                android:textAlignment="center"
                android:textColor="@color/colorTextPrimary"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <!-- Register Agent Form -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/register_head"
                        android:layout_height="wrap_content"
                        android:text="Register New Agent"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp">

                        <EditText
                            android:id="@+id/editUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Username"
                            android:background="@null"
                            android:textColor="@color/colorTextPrimary"
                            android:textColorHint="@color/colorTextSecondary"
                            android:paddingBottom="6dp"
                            android:paddingStart="5dp"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/colorTextSecondary"
                        android:layout_marginBottom="2dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp">

                        <EditText
                            android:id="@+id/editEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:background="@null"
                            android:textColor="@color/colorTextPrimary"
                            android:textColorHint="@color/colorTextSecondary"
                            android:paddingBottom="6dp"
                            android:paddingStart="5dp"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/colorTextSecondary"
                        android:layout_marginBottom="2dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp">

                        <EditText
                            android:id="@+id/editMobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mobile Number"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:background="@null"
                            android:textColor="@color/colorTextPrimary"
                            android:textColorHint="@color/colorTextSecondary"
                            android:paddingBottom="6dp"
                            android:paddingStart="5dp"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/colorTextSecondary"
                        android:layout_marginBottom="2dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp">

                        <EditText
                            android:id="@+id/editPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Password"
                            android:inputType="textPassword"
                            android:background="@null"
                            android:textColor="@color/colorTextPrimary"
                            android:textColorHint="@color/colorTextSecondary"
                            android:paddingEnd="48dp"
                            android:paddingBottom="6dp"
                            android:paddingStart="5dp"/>

                        <ImageView
                            android:id="@+id/eyeIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/eye"
                            android:layout_marginEnd="8dp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/colorTextSecondary"
                        android:layout_marginBottom="2dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:textColor="@color/buttonPrimaryText"
                        android:textStyle="bold"
                        android:backgroundTint="@color/buttonPrimaryBg"
                        android:layout_marginTop="20dp"
                        app:cornerRadius="10dp"
                        android:padding="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Agent List Section -->
        <LinearLayout
            android:id="@+id/agentListSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Total Agents Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="10dp"
                android:layout_margin="15dp"
                android:elevation="6dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/card_background"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Agents"
                            android:textColor="@color/colorTextPrimary"
                            android:textSize="16sp"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/textTotalAgents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/colorPrimary"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="20dp"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Top Agents"
                            android:textColor="@color/statusBusy"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_gravity="start"
                            android:layout_marginBottom="8dp" />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none">

                            <LinearLayout
                                android:id="@+id/topAgentsContainer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingHorizontal="8dp" />
                        </HorizontalScrollView>
                    </LinearLayout>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registered Agents"
                android:textColor="@color/colorTextPrimary"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="16dp"/>

            <!-- Filter Input -->
            <EditText
                android:id="@+id/editFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Filter by Name, Email, or Mobile"
                android:background="@drawable/filter_background"
                android:textColor="@color/colorTextPrimary"
                android:textColorHint="@color/colorTextSecondary"
                android:padding="12dp"
                android:layout_marginHorizontal="20dp"/>

            <!-- Registered Agents List -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/colorSurface"
                app:cardCornerRadius="10dp"
                android:elevation="4dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    android:scrollbarSize="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:orientation="vertical"
                        android:layout_gravity="start"
                        android:id="@+id/tabular_data"
                        android:background="@android:color/transparent"
                        android:padding="15dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:nestedScrollingEnabled="true"
                            android:layout_marginBottom="8dp" />
                    </LinearLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/redeemCodeSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:visibility="gone"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Redeem Code Creation"
                android:textAlignment="center"
                android:textColor="@color/colorTextPrimary"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <!-- Redeem Code Form -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create Redeem Code"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                        <EditText
                            android:id="@+id/editCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Redeem Code"
                            android:background="@null"
                            android:inputType="textCapCharacters"
                            android:textColor="@color/colorTextPrimary"
                            android:textColorHint="@color/colorTextSecondary"
                            android:paddingBottom="6dp"
                            android:paddingStart="5dp"
                            android:layout_marginTop="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/colorTextSecondary"
                        android:layout_marginBottom="2dp"/>

                        <EditText
                            android:id="@+id/editAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Amount (in INR)"
                            android:inputType="numberDecimal"
                            android:background="@null"
                            android:textColor="@color/colorTextPrimary"
                            android:textColorHint="@color/colorTextSecondary"
                            android:paddingBottom="6dp"
                            android:paddingStart="5dp"
                            android:layout_marginTop="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/colorTextSecondary"
                        android:layout_marginBottom="2dp"/>

                        <EditText
                            android:id="@+id/editUsageTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="No. of times to use"
                            android:inputType="number"
                            android:background="@null"
                            android:textColor="@color/colorTextPrimary"
                            android:textColorHint="@color/colorTextSecondary"
                            android:paddingBottom="6dp"
                            android:paddingStart="5dp"
                            android:layout_marginTop="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/colorTextSecondary"
                        android:layout_marginBottom="2dp"/>

                    <EditText
                        android:id="@+id/editExpireDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="DD/MM/YYYY"
                        android:inputType="date"
                        android:background="@null"
                        android:textColor="@color/colorTextPrimary"
                        android:textColorHint="@color/colorTextSecondary"
                        android:paddingEnd="48dp"
                        android:paddingBottom="6dp"
                        android:paddingStart="5dp"
                        android:layout_marginTop="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:background="@color/colorTextSecondary"
                        android:layout_marginBottom="2dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCreate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create Code"
                        android:textColor="@color/buttonPrimaryText"
                        android:textStyle="bold"
                        android:backgroundTint="@color/buttonPrimaryBg"
                        android:layout_marginTop="15dp"
                        app:cornerRadius="10dp"
                        android:padding="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/colorSurface"
                app:cardCornerRadius="10dp"
                android:elevation="6dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    android:scrollbarSize="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:orientation="vertical"
                        android:layout_gravity="start"
                        android:id="@+id/tabular_redeem"
                        android:background="@android:color/transparent"
                        android:padding="10dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewRedeem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:nestedScrollingEnabled="true"
                            android:layout_marginBottom="8dp" />
                    </LinearLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="2dp"
        android:paddingBottom="5dp"
        android:background="@color/colorSurface"
        android:elevation="4dp">

        <LinearLayout
            android:id="@+id/registerSectionSwitch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginVertical="1dp"
            android:orientation="vertical"
            android:clickable="true"
            android:elevation="6dp">

            <ImageButton
                android:id="@+id/registerSectionButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/register_icon_active"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:background="@drawable/active_button_background"
                android:contentDescription="Register Section"
                android:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="@color/colorTextPrimary"
                android:textSize="13sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/listSectionSwitch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginVertical="1dp"
            android:orientation="vertical"
            android:clickable="true"
            android:elevation="6dp">

            <ImageButton
                android:id="@+id/listSectionButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/list_icon"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:padding="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="List Section"
                android:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Agents"
                android:textColor="@color/colorTextPrimary"
                android:textSize="13sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/redeemSectionSwitch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginVertical="1dp"
            android:orientation="vertical"
            android:clickable="true"
            android:elevation="6dp">

            <ImageButton
                android:id="@+id/redeemSectionButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/redeem_code"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:padding="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="List Section"
                android:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redeem Code"
                android:textColor="@color/colorTextPrimary"
                android:textSize="13sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logoutButtonSwitch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginVertical="1dp"
            android:orientation="vertical"
            android:clickable="true"
            android:elevation="6dp">

            <ImageButton
                android:id="@+id/logoutButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/logout"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:padding="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="Logout"
                android:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/colorTextPrimary"
                android:textSize="13sp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>