<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/colorBackground"
    android:foreground="?android:attr/selectableItemBackground"
    android:transitionName="card_transition"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_gradient_background"
        android:orientation="vertical"
        android:padding="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Profile Picture -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/servant_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:padding="3dp"
                android:src="@drawable/default_profile"
                android:transitionName="profile_image_transition" />

            <!-- Verified Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/verifiedIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Verified Icon"
                    android:scaleType="fitCenter"
                    android:src="@drawable/verified" />

                <TextView
                    android:id="@+id/verifiedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Verified"
                    android:textColor="@color/colorSuccess"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/rating_star"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="15dp"
                    android:contentDescription="Rating Star"
                    android:src="@android:drawable/btn_star_big_on"
                    app:tint="@android:color/holo_orange_light" />

                <TextView
                    android:id="@+id/rating_avg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="4.9"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </FrameLayout>

        <!-- Name -->
        <TextView
            android:id="@+id/servant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Ravi S."
            android:textColor="@color/colorTextPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Category & Experience -->
        <TextView
            android:id="@+id/servant_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Expert Cook"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/servant_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="5 yrs Experience"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/servant_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Sample Area"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp" />

        <!-- Price + Rating -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/urgent_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹300/hr"
                android:textColor="@color/colorTextSecondary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/expected_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹3000/month"
                android:textColor="@color/colorTextSecondary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Availability -->
        <TextView
            android:id="@+id/availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawablePadding="4dp"
            android:text="Available"
            android:textColor="@color/colorSuccess"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- View Profile Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewProfileBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:text="View Profile"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:transitionName="button_transition"
            app:cornerRadius="10dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>