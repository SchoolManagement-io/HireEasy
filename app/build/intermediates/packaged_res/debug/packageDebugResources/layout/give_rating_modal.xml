<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_give_rating"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/card_gradient_background">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Give Rating"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/et_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Name"
        android:padding="10dp"
        android:textColor="@color/colorTextPrimary"
        android:textSize="16sp"
        android:layout_marginBottom="15dp" />

    <!-- Star Rating -->
    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:rating="0"
        android:isIndicator="false"
        android:layout_gravity="center"
        android:progressTint="@color/colorAccent"
        android:layout_marginBottom="15dp" />

    <!-- Message Input -->
    <EditText
        android:id="@+id/et_review_message"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Write your review..."
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp"
        android:textColor="@color/colorTextPrimary"
        android:textColorHint="@android:color/darker_gray"
        android:maxLines="5"
        android:layout_marginBottom="20dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btn_submit_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Rating"
        android:textStyle="bold"
        android:backgroundTint="@color/buttonAccentBg"
        android:textColor="@color/buttonAccentText"
        android:padding="12dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>
