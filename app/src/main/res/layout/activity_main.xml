<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_gradient_black"
    android:fitsSystemWindows="false">

    <!-- NAVBAR -->
    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:padding="15dp"
        android:elevation="6dp"
        android:gravity="center_vertical"
        android:backgroundTint="#FFD700"
        android:backgroundTintMode="src_over"
        android:baselineAligned="false">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/app_logo"
            android:layout_gravity="center_vertical"
            android:contentDescription="HireEasy Logo"
            android:elevation="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HireEasy"
            android:textColor="#B30000"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif-condensed" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#00E8F5E9"
            android:textColor="#000000"
            android:elevation="2dp" />

    </LinearLayout>

    <!-- SCROLLABLE CONTENT -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/navbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- CAROUSEL -->
            <RelativeLayout
                android:id="@+id/carousel_container"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_margin="12dp"
                android:elevation="5dp">

                <ImageView
                    android:id="@+id/carousel_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/carousel1"
                    android:background="@android:color/darker_gray" />

            </RelativeLayout>

            <!-- GET STARTED BUTTON -->
            <Button
                android:id="@+id/get_started_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš€ Get Started"
                android:backgroundTint="#D32F2F"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:elevation="5dp" />

            <!-- FEATURES TITLE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ¨ Why Choose HireEasy?"
                android:textColor="#FFD700"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:fontFamily="sans-serif-condensed" />

            <!-- FEATURES LIST -->
            <LinearLayout
                android:id="@+id/features_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- FEATURES ROW 1 -->
                <LinearLayout
                    android:id="@+id/feature_row_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="12dp">

                    <!-- CARD: Easy Hiring Process -->
                    <LinearLayout
                        android:id="@+id/card_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="18dp"
                        android:layout_marginEnd="6dp"
                        android:background="#FFFFFF"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:minHeight="200dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/easy_process"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Easy Hiring Process"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Search, filter, and hire domestic help with just a few taps â€” no complicated steps!"
                            android:textColor="#555555"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- CARD: Verified Candidates -->
                    <LinearLayout
                        android:id="@+id/card_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="18dp"
                        android:layout_marginStart="6dp"
                        android:background="#FFFFFF"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:minHeight="200dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/verification_black"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Verified Profiles"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Each servantâ€™s identity is authenticated by agents using Aadhaar and manual checks."
                            android:textColor="#555555"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- FEATURES ROW 2 -->
                <LinearLayout
                    android:id="@+id/feature_row_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="12dp">

                    <!-- CARD: Affordable Profile Access -->
                    <LinearLayout
                        android:id="@+id/card_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="18dp"
                        android:layout_marginEnd="6dp"
                        android:background="#FFFFFF"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:minHeight="200dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/paid_access"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹20 to View Details"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Basic profiles are free to browse. Unlock full details and contact info for just â‚¹20!"
                            android:textColor="#555555"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- CARD: Agent-Backed Management -->
                    <LinearLayout
                        android:id="@+id/card_4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="18dp"
                        android:layout_marginStart="6dp"
                        android:background="#FFFFFF"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:minHeight="200dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/agent"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agent-Based Reliability"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Each candidate is added by verified agents who manage availability and updates."
                            android:textColor="#555555"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- FEATURES ROW 3 -->
                <LinearLayout
                    android:id="@+id/feature_row_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="12dp">

                    <!-- CARD: Filter & Sort Options -->
                    <LinearLayout
                        android:id="@+id/card_5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="18dp"
                        android:layout_marginEnd="6dp"
                        android:background="#FFFFFF"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:minHeight="200dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/filter"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Smart Filtering Options"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Filter by job role, location, gender, and experience to find the best match fast."
                            android:textColor="#555555"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>

                    <!-- CARD: Feedback & Reviews -->
                    <LinearLayout
                        android:id="@+id/card_6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="18dp"
                        android:layout_marginStart="6dp"
                        android:background="#FFFFFF"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:minHeight="200dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/feedback"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Real User Feedback"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="View honest reviews and experiences from previous employers before you hire."
                            android:textColor="#555555"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_marginTop="6dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- FEEDBACK SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1AFFFFFF"
                android:orientation="vertical"
                android:padding="24dp"
                android:elevation="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¬ Share Your Feedback"
                    android:textColor="#FFD700"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center" />

                <EditText
                    android:id="@+id/feedback_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your email"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/feedback_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your feedback"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#CCCCCC"
                    android:backgroundTint="#FFFFFF"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:minHeight="100dp"
                    android:gravity="top"
                    android:inputType="textMultiLine" />

                <Button
                    android:id="@+id/submit_feedback_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit Feedback"
                    android:backgroundTint="#FF0000"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:elevation="4dp" />
            </LinearLayout>

            <!-- CONTACT US SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1AFFFFFF"
                android:orientation="vertical"
                android:padding="24dp"
                android:elevation="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¬ Contact Us"
                    android:textColor="#FFD700"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/gmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hireeasy@gmail.com"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/linkedin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="linkedin.com/company/hireeasy"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>