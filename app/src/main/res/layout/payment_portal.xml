<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_page_background"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="20dp"
        android:elevation="20dp"
        android:layout_margin="8dp"
        android:backgroundTint="@android:color/white"
        android:layout_gravity="center"
        android:clipToPadding="false"
        android:backgroundTintMode="src_in"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:animateLayoutChanges="true"
        android:layoutDirection="ltr">

        <!-- Header with logo and app name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/app_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hire Easy"
                android:fontFamily="@font/poppins_bolditalic"
                android:textSize="20sp"
                android:textColor="@color/colorTextPrimary"
                android:layout_marginStart="10dp" />
        </LinearLayout>

        <!-- Main Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unlock Full Profile Access"
            android:textSize="18sp"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_semiboiditalic" />

        <!-- Sub Text -->
        <TextView
            android:id="@+id/subText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To view more about {servant_name}, unlock their profile for just ₹20."
            android:textSize="14sp"
            android:textColor="@color/colorTextSecondary"
            android:layout_marginTop="6dp"
            android:lineSpacingExtra="4dp"
            android:fontFamily="@font/poppins_regular" />

        <!-- Agent Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textSize="14sp"
                android:textColor="@color/colorTextPrimary" />

            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sample@gmail.com"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                android:textColor="@color/colorTextPrimary" />
        </LinearLayout>

        <!-- Agent Mobile -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile:"
                android:textSize="14sp"
                android:textColor="@color/colorTextPrimary" />

            <TextView
                android:id="@+id/userMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9999999999"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                android:textColor="@color/colorTextPrimary" />
        </LinearLayout>

        <!-- Redeem Code -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have a Redeem Code?"
            android:textSize="14sp"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/poppins_semiboiditalic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/editRedeem"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:background="@drawable/rounded_edittext"
                android:hint="Enter code"
                android:padding="12dp"
                android:inputType="text"
                android:textColor="@color/colorTextPrimary" />

            <Button
                android:id="@+id/btnApply"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Apply"
                android:textAllCaps="false"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@color/colorTextPrimary"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Payable Amount and Redeem Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payable Amount:"
                android:textSize="16sp"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/payableAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ₹20"
                android:textSize="16sp"
                android:layout_marginStart="6dp"
                android:textColor="@color/colorSuccess"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/appliedSuccessBtn"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/check"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_marginStart="10dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/appliedSuccessText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redeem code applied!"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/colorSuccess"
                android:layout_marginStart="6dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Payment Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/payAmountBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:text="Pay ₹20 &amp; Unlock Profile"
            android:backgroundTint="@color/colorSuccess"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="15sp"
            app:cornerRadius="16dp" />

        <!-- Secure Payment Note -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100% Secure Payment via Verified Gateway"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorTextSecondary"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>
